@{
    ViewData["Title"] = "Estamos verificando los datos";

    if (ViewData["ALLOWED"].Equals("TRUE"))
    {
        ViewData["URL"] = "/Users/Profile?username="+ ViewData["USERNAME"]+"&password="+ ViewData["PASSWORD"];
        ViewData["SEG"] = 10;
    }
    else
    {
        ViewData["URL"] = "/Users/";
        ViewData["SEG"] = 2;
    }

}
<head>
    <meta http-equiv="Refresh" content="@ViewData["SEG"] ; url=@ViewData["URL"]">
</head>
<body>
    <div class="text-center">
        <br />
        @{
            if (!ViewData["ALLOWED"].Equals("TRUE"))
            {
                <h2><b>Los datos son INCORRECTOS, sera redireccionado automáticamente al login</b></h2>
            }
            else
            {
                <h2><b>Bienvenido de nuevo, se redireccionara automáticamente a su perfil</b></h2>
            }
        }
        <br />
        <p><a href=@ViewData["URL"]>Si no te redirecciona, has click aquí</a></p>
    </div>
</body>