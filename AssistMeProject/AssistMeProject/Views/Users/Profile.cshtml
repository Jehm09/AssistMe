@model IEnumerable<AssistMeProject.Models.User>;
@{
    ViewData["Title"] = "Perfil de Usuario";
    ViewData["ViewingUser"] = "asd";
}
<div class="breadcrumbs">
    <section class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>@ViewData["Title"]</h1>
            </div>
            <div class="col-md-12">
                <div class="crumbs">
                    <a href="#">Home</a>
                    <span class="crumbs-span">/</span>
                    <a href="#">Users</a>
                    <span class="crumbs-span">/</span>
                    <span class="current">Profile</span>
                </div>
            </div>
        </div><!-- End row -->
    </section><!-- End container -->
</div><!-- End breadcrumbs -->
<section class="container main-content">
    <div class="row">
        <div class="col-md-9">
            <div class="row">
                <div class="user-profile">
                    <div class="col-md-12">
                        <div class="page-content">
                            <h2>
                                Acerca del Usuario
                                @{
                                    if (ViewData["USERNAME"] != null) {
                                        <span>: </span> @ViewData["USERNAME"];
                                    }
                                }
                            </h2>
                            <div class="user-profile-img"><img width="60" height="60" src="http://placehold.it/60x60/FFF/444" alt="admin"></div>
                            <div class="ul_list ul_list-icon-ok about-user">
                                <ul>
                                    @{
                                        if (ViewData["USERNAME"] != null && ViewData["ViewingUser"].ToString().Equals(ViewData["USERNAME"].ToString())) {
                                            <li><i class="icon-tag"></i><span><b>ID:</b> @ViewData["ID"]</span></li>
                                            <li><i class="social_icon-email"></i><span><b>Correo:</b> @ViewData["EMAIL"]</span></li>
                                        }
                                    }
                                    <li><i class="icon-map-marker"></i><span><b>Ubicación:</b> @ViewData["LOCATION"]</span></li>
                                </ul>
                            </div>
                            <br /><br /><br />
                            <b>Descripción : </b><span>@ViewData["DESCRIPTION"]</span><br /><br />
                            <b>Intereses o Conocimientos : </b><span>@ViewData["INTERESTS"]</span>
                            <div class="user-profile-widget">
                                <h2></h2>
                                <div class="ul_list ul_list-icon-ok">
                                    <ul>
                                        <li><i class="icon-question-sign"></i><a href="user_questions.html">Preguntas<span> ( <span>30</span> ) </span></a></li>
                                        <li><i class="icon-comment"></i><a href="user_answers.html">Respuestas<span> ( <span>10</span> ) </span></a></li>
                                    </ul>
                                </div>
                            </div><!-- End user-profile-widget -->
                        </div><!-- End page-content -->
                    </div><!-- End col-md-12 -->
                </div><!-- End user-profile -->
            </div><!-- End row -->
        </div><!-- End main -->
        <aside class="col-md-3 sidebar">
            <div class="widget">
                <h3 class="widget_title">Últimas preguntas realizadas</h3>
                <ul class="related-posts">
                    <li class="related-item">
                        <h3><a href="#">Esta es mi primera pregunta</a></h3>
                        <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
                        <div class="clear"></div><span>Mar 24, 2019</span>
                    </li>
                    <li class="related-item">
                        <h3><a href="#">Esta es mi segunda pregunta de la encuesta</a></h3>
                        <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
                        <div class="clear"></div><span>Mar 24, 2019</span>
                    </li>
                </ul>
            </div>
        </aside><!-- End sidebar -->
    </div><!-- End row -->
</section><!-- End container -->
