@model AssistMeProject.Models.Studio

@{
    ViewData["Title"] = "Details";
    ViewData["IsQuestionMin"] = true;

}





<section class="container main-content">
    <div class="row">
        <div class="col-md-9">
            <article class="post clearfix">
                <div class="post-inner">
                    <div class="page-content clearfix">
                       
                       
                        @{
                            foreach (var f in ViewBag.FileNames)
                            {
                                <div class="post-img"><a href="single_post.html"><img src='~/uploads/@(Model.Name+"/"+f)' alt=""></a></div>
                            }
                        }

                    </div>
                    
                    <h2 class="post-title"><a href="single_post.html"> @Model.Name</a></h2>
                    <div class="post-meta">
                        <span class="meta-categories"><i class="icon-suitcase"></i><a href="#">@Model.Unit</a></span>
                    </div>
                    <div class="post-content">
                        <p>@Model.Description</p>
                        <h3 align="center"> <a asp-action="EditStudio" asp-route-id="@Model.Id"><span class="icons-notebook"> </span>Editar Studio</a></h3>

                        <h3 align="center"> <a asp-action="DeleteStudio" asp-route-id="@Model.Id"><span class="icons-minus-white"> </span>Eliminar Studio</a></h3>

                    </div><!-- End post-content -->
                </div><!-- End post-inner -->
            </article><!-- End article.post -->

       
         


      
        </div><!-- End main -->
    </div><!-- End row -->
</section><!-- End container -->



@section scripts{

    <script>

    var level = @ViewData["Admin"];

        window.onload = ocultar();

    function ocultar() {
        if (level == 2) {
            console.log('Este usuario es un administrador');
            document.getElementById('but1').style.display = 'block';
            document.getElementById('but2').style.display = 'block';
        }else {
                        document.getElementById('lab').style.display = 'block';

        }
    }


        $(function () {
            $.ajax({
                url: "@Url.Content("~/Answers/AnswerList?QuestionId="+Model.Id)"
            }).done(function (data) {
                $('#answerlist').html(data);
            }).fail(function () {
                alert("error");
            });
        }
        );
    </script>





}
