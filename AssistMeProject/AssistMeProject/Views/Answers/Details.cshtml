@model AssistMeProject.Models.Answer

@{
    ViewData["Title"] = "Details";
}


<h4>Answer</h4>


<li class="comment">
    <div class="comment-body comment-body-answered clearfix">
        <div class="avatar"><img alt="" src="http://placehold.it/60x60/FFF/444"></div>
        <div class="comment-text">
            <div class="author clearfix">
                <div class="comment-author"><a href="#">admin</a></div>
                <div class="comment-vote">
                    <ul class="question-vote">
                        <li><a href="#" class="question-vote-up" title="Like"></a></li>
                    </ul>
                </div>
                <span class="question-vote-result">+1</span>
                <div class="comment-meta">
                    <div class="date"><i class="icon-time"></i>@Html.DisplayFor(m => m.Date)</div>
                </div>
                <a class="comment-reply" href="#"><i class="icon-reply"></i>Reply</a>
            </div>
            <div class="text">
                <p>@Html.DisplayFor(m => m.Description)</p>
                <p>Answered to: @Html.DisplayFor(m => m.Question.Title)</p>

            </div>
            <div class="question-answered question-answered-done"><i class="icon-ok"></i>Best Answer</div>
        </div>
    </div>
    <div>
        <a asp-controller="Comments" asp-action="Create" asp-route-AnswerId="@Model.Id">Agregar Comentario</a>
        <!--|
        <a asp-action="Index">Back to List</a> -->
    </div>

</li>


<div id="commentlist">

   

</div>


@section scripts{



    <script>
        $(function () {
            $.ajax({
                url: "@Url.Content("~/Comments/CommentList?AnswerId="+Model.Id)"
            }).done(function (data) {
                $('#commentlist').html(data);
            }).fail(function () {
                alert("error");
            });
        }
        );
    </script>
}

